
<div class="container__sign__style">
  <div class="sign_header">
    <span style="font-size: 2.3em; color: #9e9e9e;">Register
      <i class="fas fa-user-plus"></i>
    </span>
  </div>
 <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "col s12" ) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="input-field col s12">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <%= f.label :email %><br />
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <% if @minimum_password_length %>
            <em class="worning_chara"><%= @minimum_password_length %> characters minimum</em>
          <br />
          <%= f.password_field :password, autocomplete: "new-password" %>
          <%= f.label :password %>
           <% end %>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
<!--           <input id="password" type="password" class="validate">
          <label for="password">Password</label> -->
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          <%= f.label :password_confirmation, class: "validate", id: "password"%>
        </div>
      </div>
     <div class="submit_style">
        <%= button_tag type: "submit", class: "btn btn-default btn-s-md indigo accent-1" do %>
          <i class="fas fa-paper-plane"></i>register
        <% end %>
      </div>
      <% end %>
  </div>
</div>
